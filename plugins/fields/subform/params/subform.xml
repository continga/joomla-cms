<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field
				name="repeat"
				type="radio"
				label="PLG_FIELDS_SUBFORM_PARAMS_REPEAT_LABEL"
				description="PLG_FIELDS_SUBFORM_PARAMS_REPEAT_DESC"
				default="1"
				class="btn-group btn-group-yesno"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="options"
				type="subform"
				label="PLG_FIELDS_SUBFORM_PARAMS_OPTIONS_LABEL"
				description="PLG_FIELDS_SUBFORM_PARAMS_OPTIONS_DESC"
				layout="joomla.form.field.subform.repeatable"
				icon="list"
				multiple="true"
				min="1"
			>
				<form hidden="true" name="options_modal" repeat="true">

					<field
						name="name"
						type="text"
						label="PLG_FIELDS_SUBFORM_PARAMS_OPTIONS_NAME_LABEL"
						description="PLG_FIELDS_SUBFORM_PARAMS_OPTIONS_NAME_DESC"
						required="true"
					/>

					<field
						name="type"
						type="subformtype"
						label="COM_FIELDS_FIELD_TYPE_LABEL"
						default="text"
						description="COM_FIELDS_FIELD_TYPE_DESC"
						required="true"
					/>

					<field
						name="label"
						type="text"
						label="COM_FIELDS_FIELD_LABEL_LABEL"
						description="COM_FIELDS_FIELD_LABEL_DESC"
						required="true"
					/>

					<field
						name="description"
						type="textarea"
						label="JGLOBAL_DESCRIPTION"
						description="COM_FIELDS_FIELD_DESCRIPTION_DESC"
						filter="HTML"
					/>

					<field
						name="default_value"
						type="textarea"
						filter="raw"
						label="COM_FIELDS_FIELD_DEFAULT_VALUE_LABEL"
						description="COM_FIELDS_FIELD_DEFAULT_VALUE_DESC"
					/>
				</form>
			</field>
		</fieldset>
	</fields>
</form>
